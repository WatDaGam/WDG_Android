<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="90dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:alpha="0.3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/story_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:visibility="gone"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textColor="#FF888888"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/story_title"
        app:layout_constraintStart_toEndOf="@id/story_title"/>

    <ImageButton
        android:id="@+id/story_more"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        android:src="@drawable/ic_more_horiz"
        android:contentDescription="@string/list_more_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/story_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100sp"
        android:visibility="gone"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/story_title"
        app:layout_constraintBottom_toTopOf="@id/story_distance_container"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/story_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/story_likes_anim"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_like_folded"
            app:lottie_fileName="like_animation.json"
            app:lottie_progress="0.0"
            app:lottie_loop="false"
            app:lottie_autoPlay="false"/>
        <TextView
            android:id="@+id/story_likes_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:clickable="false"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/story_distance_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/story_distance_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_distance_folded"
            android:contentDescription="@string/list_item_distance"/>
        <TextView
            android:id="@+id/story_distance_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_kr_medium"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAlignment="center"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>