<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/story_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/story_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:visibility="gone"
        android:textColor="#FF888888"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/story_title"
        app:layout_constraintStart_toEndOf="@id/story_title"/>

    <ImageButton
        android:id="@+id/story_more"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        android:src="@drawable/ic_more_horiz"
        android:contentDescription="@string/list_more_desc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/story_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/story_title"
        app:layout_constraintBottom_toTopOf="@id/story_distance"/>

    <TextView
        android:id="@+id/story_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        app:drawableStartCompat="@drawable/ic_thumbs_up"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/story_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        app:drawableStartCompat="@drawable/ic_navigation_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>