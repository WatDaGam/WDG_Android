<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>

    <style name="toolbar_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/noto_sans_kr_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="toolbar_back">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:contentDescription">@string/toolbar_back</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="toolbar_logo">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:src">@drawable/wdg_logo_black</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="toolbar_location">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/noto_sans_kr_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>